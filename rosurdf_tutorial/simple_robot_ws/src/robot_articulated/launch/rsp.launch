<launch>
        <arg name="model" />
        
         <!-- Argumento para definir o uso do tempo de simulação -->
         <arg name="use_sim_time" default="false" />
        
        <param name="robot_description" command="$(find xacro)/xacro $(find robot_articulated)/description/robot.urdf.xacro" />
        
       <!-- send fake joint values -->
        <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"/>
                
       <!-- Node do robot_state_publisher -->
         <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
                <param name="use_sim_time" value="$(arg use_sim_time)" />
        </node>

        <node name="rviz" pkg="rviz" type="rviz" args="-d $(find robot_articulated)/config/robot_articulated.rviz"/>-


</launch>