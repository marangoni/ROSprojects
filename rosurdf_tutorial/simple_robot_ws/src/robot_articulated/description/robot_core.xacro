<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <xacro:include filename="inertial_macros.xacro"/>
    

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.15 0 0.0375"/>
            <geometry>
                <cylinder radius="0.15" length="0.075"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.15 0 0.0375"/>
            <geometry>
                <cylinder radius="0.15" length="0.075"/>
            </geometry>
        </collision>
        
        <xacro:inertial_cylinder mass="0.5" length ="0.075" radius="0.15">
            <origin xyz="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- LEFT WHEEL Link -->

    <joint name = "left_wheel_joint" type = "continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.10 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name = "left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <material name = "blue"/>
        </visual>
        <collision>           
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

        <!-- RIGHT WHEEL Link -->

        <joint name = "right_wheel_joint" type = "continuous">
            <parent link="base_link"/>
            <child link="right_wheel"/>
            <origin xyz="0.0 -0.10 0.0" rpy="${pi/2} 0.0 0.0"/>
            <axis xyz="0.0 0.0 -1.0"/>
        </joint>
    
        <link name = "right_wheel">
            <visual>
                <geometry>
                    <cylinder radius="0.03" length="0.02"/>
                </geometry>
                <material name = "blue"/>
            </visual>
            <collision>  
                <geometry>
                    <cylinder radius="0.03" length="0.02"/>
                </geometry>
            </collision>
            <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.03">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>

        <!-- Caster Wheel link -->

        <joint name = "caster_wheel_joint" type = "fixed">
            <parent link="base_link"/>
            <child link="caster_wheel"/>
            <origin xyz="0.12 0.0 0.0" />
        </joint>

        <link name = "caster_wheel">
            <visual>
                <geometry>
                    <sphere radius="0.03"/>
                </geometry>
                <material name = "black"/>
            </visual>
            
            <collision>                
                <geometry>
                    <sphere radius="0.03"/>
                </geometry>
            </collision>
            <xacro:inertial_sphere mass="0.1" radius="0.03">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_sphere>

        </link>

</robot>