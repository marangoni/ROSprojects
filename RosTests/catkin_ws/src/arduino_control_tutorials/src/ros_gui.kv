MDFloatLayout:
    radius: [5, 0, 0, 0]
  
    MDLabel:
        text: "Arduino 3 Servo Controller"
        halign: "center"
        size_hint: 1, 1
        pos_hint:{"center_x": .5, "center_y": 0.95}
        font_style:"H4"

    MDLabel:
        text: "Servo base - control"
        halign: "center"
        size_hint: 1, 1
        pos_hint:{"center_x": .5, "center_y": 0.75}

    MDLabel:
        text: "Servo Waist - control"
        halign: "center"
        size_hint: 1, 1
        pos_hint:{"center_x": .5, "center_y": 0.55}

    MDLabel:
        text: "Servo Shoulder - control"
        halign: "center"
        size_hint: 1, 1
        pos_hint:{"center_x": .5, "center_y": 0.35}

    MDLabel:
        id:my_label
        text: ""
        halign: "center"
        size_hint: 1, 1
        pos_hint:{"center_x": .5, "center_y": 0.5}

    MDRaisedButton:
        text: "Move"
        md_bg_color: "green"
        halign: "center"
        size_hint: 0.15, 0.05
        pos_hint:{"center_x": .5, "center_y": 0.2}
        on_press: app.my_function(*args)

    MDRaisedButton:
        text: "Initial pos"
        md_bg_color: "green"
        halign: "center"
        size_hint: 0.15, 0.05
        pos_hint:{"center_x": .2, "center_y": 0.2}
        on_press: app.go_initial(*args)

    MDRaisedButton:
        text: "Final pos"
        md_bg_color: "green"
        halign: "center"
        size_hint: 0.15, 0.05
        pos_hint:{"center_x": .8, "center_y": 0.2}
        on_press: app.go_final(*args)

    MDSlider:
        id: servo_base
        min: 0
        max: 180
        value: 90
        hint: True
        color: "red"
        size_hint: 0.5, 0.05
        pos_hint:{"center_x": .5, "center_y": 0.8}
        hint_bg_color: "red"
        hint_text_color: "white"
        hint_radius: [6, 0, 6, 0]
        on_touch_up: app.slider_base_function(self.value)

    MDSlider:
        id: servo_waist
        min: 0
        max: 180
        value: 90
        hint: True
        color: "red"
        size_hint: 0.5, 0.05
        pos_hint:{"center_x": .5, "center_y": 0.6}
        hint_bg_color: "red"
        hint_text_color: "white"
        hint_radius: [6, 0, 6, 0]  
        on_touch_up: app.slider_waist_function(self.value) 

    MDSlider:
        id: servo_shoulder
        min: 0
        max: 180
        value: 90
        hint: True
        color: "red"
        size_hint: 0.5, 0.05
        pos_hint:{"center_x": .5, "center_y": 0.4}
        hint_bg_color: "red"
        hint_text_color: "white"
        hint_radius: [6, 0, 6, 0]
        on_touch_up: app.slider_shoulder_function(self.value)
