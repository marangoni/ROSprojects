<launch>
  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find tangs5dof)/config/tangs5dof_controller.yaml" command="load"/>

  <!-- load the controllers -->

  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/onshape" args="wrist_pitch_position_controller 
                                        wrist_yaw_position_controller 
                                        elbow_position_controller 
                                        shoulder_position_controller 
                                        waist_position_controller 
                                        joint_state_controller --shutdown-timeout 3"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/onshape/joint_states" />
  </node>

</launch>